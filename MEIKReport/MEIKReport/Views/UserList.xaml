<Window x:Class="MEIKReport.UserList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MEIK Report" Height="600" Width="800" WindowStyle="ThreeDBorderWindow"
        Icon="/MEIKReport;component/Images/MEIK-ICON.png"
        ShowInTaskbar="False" ResizeMode="NoResize" Closed="Window_Closed" WindowStartupLocation="CenterScreen" WindowState="Maximized" Topmost="True">    
    <!--<Window.TaskbarItemInfo>
        <TaskbarItemInfo Description="My Application" Overlay="/MEIKReport;component/Images/ProgressIcon.jpg" ProgressState="Normal"  ProgressValue="10" />
    </Window.TaskbarItemInfo>-->
    <Window.Resources>        
        <CollectionViewSource x:Key="CustomerSource" />
    </Window.Resources>
    <Grid Margin="10,0,10,10">
        <Grid.Resources>
            <!-- Initialization Report Data -->
            <XmlDataProvider x:Key="ExpenseDataSource" XPath="Expenses">
                <x:XData>
                    <Expenses xmlns="">
                        <Person Name="Mike" Department="Legal">
                            <Expense ExpenseType="Lunch" ExpenseAmount="50" />
                            <Expense ExpenseType="Transportation" ExpenseAmount="50" />
                        </Person>
                        <Person Name="Lisa" Department="Marketing">
                            <Expense ExpenseType="Document printing" ExpenseAmount="50"/>
                            <Expense ExpenseType="Gift" ExpenseAmount="125" />
                        </Person>
                        <Person Name="John" Department="Engineering">
                            <Expense ExpenseType="Magazine subscription" ExpenseAmount="50"/>
                            <Expense ExpenseType="New machine" ExpenseAmount="600" />
                            <Expense ExpenseType="Software" ExpenseAmount="500" />
                        </Person>
                        <Person Name="Mary" Department="Finance">
                            <Expense ExpenseType="Dinner" ExpenseAmount="100" />
                        </Person>
                    </Expenses>
                </x:XData>
            </XmlDataProvider>
            <!-- Name item template -->
            <DataTemplate x:Key="nameItemTemplate">
                <Label Content="{Binding XPath=@Name}"/>
            </DataTemplate>
            <XmlDataProvider x:Key="EquipmentDataSource" XPath="Equipments">
                <x:XData>
                    <Equipments xmlns="">
                        <Equipment SN="S0001" Location="DPMMH1" Address="705 Purok 1, Moras dela Paz, Sto. Tomas, Pampanga">
                            <Person Code="14102500104" Gender="Female" Name="Mary" Age="17" />
                            <Person Code="14102500105" Gender="Female" Name="Rose" Age="18" />
                        </Equipment>
                        <Equipment SN="S0002" Location="DPMMH2" Address="705 Purok 1, Moras dela Paz, Sto. Tomas, Pampanga">
                            <Person Code="14102500106" Gender="Female" Name="Lisa" Age="19"/>
                            <Person Code="14102500107" Gender="Female" Name="Monica" Age="20"/>
                        </Equipment>
                        <Equipment SN="S0003" Location="DPMMH3" Address="705 Purok 1, Moras dela Paz, Sto. Tomas, Pampanga">
                            <Person Code="14102500108" Gender="Female" Name="Mary" Age="17"/>
                            <Person Code="14102500109" Gender="Female" Name="Mary" Age="17"/>
                            <Person Code="14102500110" Gender="Female" Name="Mary" Age="17"/>
                        </Equipment>
                        <Equipment SN="S0004" Location="DPMMH4" Address="705 Purok 1, Moras dela Paz, Sto. Tomas, Pampanga">
                            <Person Code="14102500111" Gender="Female" Name="Mary" Age="17"/>
                        </Equipment>
                    </Equipments>
                </x:XData>
            </XmlDataProvider>
            <!-- Name item template -->
            <DataTemplate x:Key="equipemntItemTemplate">
                <Label Content="{Binding XPath=@Location}"/>
            </DataTemplate>
        </Grid.Resources>

        <!--<Grid.Background>
            <SolidColorBrush Color="Black"></SolidColorBrush>
        </Grid.Background>-->        

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>            
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Width="125" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                <Label Style="{StaticResource labelStyle}" >Selection of archive</Label>                
            </StackPanel>
            <StackPanel Grid.Column="1"  HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBox Name="txtFolderPath" Width="350" IsEnabled="False" Height="26"></TextBox>
            </StackPanel>
            <StackPanel Grid.Column="2"  HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button Name="btnSelectFolder" Width="100" Height="22" Content="BROWSE..." Click="btnSelectFolder_Click"></Button>
            </StackPanel>
        </Grid>
        <Grid Name="dataGrid" Grid.Row="1" DataContext="{Binding Source={StaticResource CustomerSource}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>                
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ListBox Grid.Row="0" Grid.Column="0" Name="CodeListBox" IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" Margin="5">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" >                            
                            <TextBlock Text="{Binding Path=Code}" />                            
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListBox>
            <Border Grid.Column="1" BorderThickness="1" BorderBrush="Gray" Margin="0,5,0,5">
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" Margin="5">
                        <Label Height="28" Name="Label1" Width="Auto" HorizontalContentAlignment="Right">Full Name:</Label>
                        <Label Height="28" Name="Label2" Width="Auto" HorizontalContentAlignment="Right">Birthday:</Label>
                        <Label Height="28" Name="Label3" Width="Auto" HorizontalContentAlignment="Right">Address:</Label>
                        <Label Height="28" Name="Label4" Width="Auto" HorizontalContentAlignment="Right">Registration Date:</Label>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Margin="5">
                        <Label Height="28" Name="txtName" Width="Auto" HorizontalContentAlignment="Left" Content="{Binding Path=SurName}"></Label>
                        <Label Height="28" Name="txtBirthday" Width="Auto" HorizontalContentAlignment="Left" Content="{Binding Path=Birthday}"></Label>
                        <Label Height="28" Name="txtAddress" Width="Auto" HorizontalContentAlignment="Left" Content="{Binding Path=Address}"></Label>
                        <Label Height="28" Name="txtRegiDate" Width="Auto" HorizontalContentAlignment="Left" Content="{Binding Path=Regdate}"></Label>
                    </StackPanel>
                </Grid>                
            </Border>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>                
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Name="exitReport" Width="100" Style="{StaticResource buttonStyle}" Click="exitReport_Click" >Exit</Button>
            </StackPanel>
            <WrapPanel Name="reportButtonPanel" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="Hidden">                                
                <Button Click="ExaminationReport_Click" Width="180" Style="{StaticResource buttonStyle}" Margin="10,0,0,0">Examination Report</Button>
                <Button Click="SummaryReport_Click" Width="180" Style="{StaticResource buttonStyle}" Margin="10,0,0,0">Summary Report</Button>                
            </WrapPanel>
            <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Visibility="Hidden" Name="emailButton" Width="120" Style="{StaticResource buttonStyle}" Margin="10,0,0,0" Click="EmailButton_Click">Email Report</Button>
            </StackPanel>
        </Grid>


    </Grid>
</Window>
