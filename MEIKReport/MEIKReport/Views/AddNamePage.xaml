<Window x:Class="MEIKReport.AddNamePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add name" Height="140" Width="300" ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">    
    <Grid>       
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label FontSize="14" Height="28" VerticalAlignment="Bottom" Margin="5,0,0,0">Please input a name:</Label>                        
        </StackPanel>
        <StackPanel Grid.Row="2" HorizontalAlignment="Left">
            <TextBox Name="txtName" Width="270" Height="28" FontSize="14" Margin="10,0,0,0"></TextBox>
        </StackPanel>
        <WrapPanel Grid.Row="3"  VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="btnAdd" Width="80" Click="btnAdd_Click">Add</Button>
            <Button Name="btnCancel" Width="80" Click="btnCancel_Click" Margin="10,0,0,0">Cancel</Button>
        </WrapPanel>
    </Grid>
</Window>
